        {
          "src": "/icons/shortcut-analytics.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "audio/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "audio/*": [".mp3", ".wav", ".m4a"],
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+hotelms",
      "url": "/protocol-handler?url=%s"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.hotelms.app",
      "id": "com.hotelms.app"
    },
    {
      "platform": "ios",
      "url": "https://apps.apple.com/app/hotel-management-system/id1234567890"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  }
}