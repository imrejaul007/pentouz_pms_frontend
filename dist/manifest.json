        }
      ]
    },
    {
      "name": "Room Status",
      "short_name": "Rooms",
      "description": "Check room availability and status",
      "url": "/admin/rooms?shortcut=status",
      "icons": [
        {
          "src": "/icons/shortcut-rooms.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Tape Chart",
      "short_name": "Chart",
      "description": "View reservation tape chart",
      "url": "/admin/tape-chart?shortcut=chart",
